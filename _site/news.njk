---
layout: 'layouts/default.njk'
title: News
pagination:
  data: collections.news
  size: 10
eleventyComputed:
  eleventyNavigation:
    key: "{{ title }}"
    order: 2
---

{%- import "components/ui.njk" as ui -%}

{% call ui.section() %}
  {% call ui.heading() %}
    {{ title }}
  {% endcall %}
  <div class="border-(l gray-500/30) pl-6">
    <ul class="mt-16 space-y-16">
      {% for item in pagination.items | reverse %}
        <li class="md:(pr-5 grid-(& cols-4) items-baseline)">
          <time class="mt-1 mb-3 text-gray-600 block" datetime="{{ item.data.date.toLocaleDateString('en-US', {month: '2-digit', day: '2-digit', year: 'numeric', timeZone: 'UTC'}) }}">{{ item.data.date.toLocaleDateString('en-US', {month: 'long', day: '2-digit', year: 'numeric', timeZone: 'UTC'}) }}</time>
          <article class="max-w-3xl relative md:(col-span-3)">
            <h2 class="mb-2 text-(gray-200 xl) font-semibold">
              <a href="{{ item.url }}" class="group">
                {{ item.data.title }}
                <span class="bg-red-500 absolute -inset-3 rounded-lg opacity-0 transform scale-90 motion-safe:(transition) group-hover:(opacity-20 scale-100) md:(-inset-5 rounded-xl)"></span>
              </a>
            </h2>
            <p class="text-base line-clamp-3">{{ item.content | striptags(true) | escape }}</p>
            <div class="mt-3 text-gray-500 flex items-center gap-1" aria-hidden="true">Read article <iconify-icon icon="mdi:chevron-right" width="1em" height="1em" inline="false" class="iconify"></iconify-icon></div>
          </article>
        </li>
      {% endfor %}
    </ul>
  </div>
  {% if pagination.href.previous or pagination.href.next %}
    <nav class="pt-16" aria-label="News navigation">
      <ul class="flex items-center justify-center gap-10">
        {% if pagination.href.previous %}
          <li><a href="{{ pagination.href.previous }}" class="flex items-center gap-2"><iconify-icon icon="mdi:chevron-left" width="1em" height="1em" inline="false" class="text-xl opacity-50"></iconify-icon> Newer</a></li>
        {% endif %}
        {% if pagination.href.next %}
          <li><a href="{{ pagination.href.next }}" class="flex items-center gap-2">Older <iconify-icon icon="mdi:chevron-right" width="1em" height="1em" inline="false" class="text-xl opacity-50"></iconify-icon></a></li>
        {% endif %}
      </ol>
    </nav>
  {% endif %}
{% endcall %}